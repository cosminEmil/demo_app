<% if @task.errors.any? %>
  <div class="alert alert-danger" style="width: 100%; max-width: 600px; margin: 0 auto;">
    <ul class="mb-0">
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: [@todo_list, @task], local: true) do |form| %>
  <div class="card p-3 shadow-sm" style="max-width: 600px; margin: 0 auto;">
    <h3 class="mb-3 text-center"><%= @task.new_record? ? "Create New Task" : "Edit Task" %></h3>

    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control form-control-sm', placeholder: 'Enter task title' %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control form-control-sm', rows: 3, placeholder: 'Enter task description' %>
    </div>

    <div class="mb-3 form-check">
      <%= form.check_box :completed, class: 'form-check-input' %>
      <%= form.label :completed, 'Completed', class: 'form-check-label' %>
    </div>

    <div class="d-flex justify-content-end">
      <%= form.submit @task.new_record? ? "Create Task" : "Update Task", class: 'btn btn-success btn-sm' %>
    </div>
  </div>
<% end %>

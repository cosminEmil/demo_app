<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-body">
      <h1 class="card-title text-primary">Task: <%= @task.title %></h1>

      <p class="card-text">
        <strong>Description:</strong> 
        <%= @task.description.presence || content_tag(:span, "No description provided", class: "text-muted") %>
      </p>

      <p class="card-text">
        <strong>Status:</strong> 
        <span class="badge bg-<%= @task.completed ? 'success' : 'warning' %>">
          <%= @task.completed ? '✅ Completed' : '⏳ Pending' %>
        </span>
      </p>

      <div class="d-flex gap-2 mt-3">
        <%= link_to 'Edit Task', edit_todo_list_task_path(@todo_list, @task), class: 'btn btn-warning' %>
        <%= link_to 'Toggle Status', toggle_status_todo_list_task_path(@todo_list, @task), method: :patch, class: 'btn btn-info' %>
        <%= button_to 'Delete', todo_list_task_path(@todo_list, @task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        <%= link_to 'Back to Todo List', todo_list_path(@todo_list), class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>

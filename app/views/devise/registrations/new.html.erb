<% if flash[:alert] %>
  <div class="alert alert-danger"><%= flash[:alert] %></div>
<% end %>

<div class="container d-flex justify-content-center mt-5">
  <div class="card shadow-lg p-4" style="width: 30rem;">
    <div class="card-body">
      <h2 class="card-title text-center mb-3">Sign Up</h2>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "needs-validation" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <!-- Username Field -->
        <div class="mb-3">
          <%= f.label :username, class: "form-label" %>
          <%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control" %>
        </div>

        <!-- Email Field -->
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <!-- Password Field -->
        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <% if @minimum_password_length %>
            <em class="small text-muted">(<%= @minimum_password_length %> characters minimum)</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
        </div>

        <!-- Password Confirmation Field -->
        <div class="mb-3">
          <%= f.label :password_confirmation, class: "form-label" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
        
        <div class="mb-3">
          <%= recaptcha_tags %>
        </div>


        <!-- Submit Button -->
        <div class="d-grid">
          <%= f.submit "Sign Up", class: "btn btn-primary btn-lg" %>
        </div>
      <% end %>

      <hr>

      <!-- Additional Links -->
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

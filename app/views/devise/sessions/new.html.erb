<div class="container d-flex justify-content-center mt-5">
  <div class="card shadow-lg p-4" style="width: 30rem;">
    <div class="card-body">
      <h2 class="card-title text-center mb-3">Log In</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: "needs-validation" }) do |f| %>

        <!-- Email Field -->
        <div class="mb-3">
          <%= f.label :email, class: "form-label" %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        </div>

        <!-- Password Field -->
        <div class="mb-3">
          <%= f.label :password, class: "form-label" %>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <!-- Submit Button -->
        <div class="d-grid">
          <%= f.submit "Log in", class: "btn btn-primary btn-lg" %>
        </div>
        
      <% end %>

      <hr>

      <!-- Additional Links -->
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

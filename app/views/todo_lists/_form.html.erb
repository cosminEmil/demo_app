<% if @todo_list.errors.any? %> 
  <div class="alert alert-danger mx-auto w-25 mb-4">
    <ul class="mb-0">
      <% @todo_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="d-flex justify-content-center mb-5 mt-5">
  <div class="w-25 p-4 border rounded shadow-sm"> 
    <%= form_with(model: @todo_list, local: true) do |form| %>
      <div class="mb-2">
        <%= form.label :title, class: 'form-label fw-semibold' %>
        <%= form.text_field :title, class: 'form-control' %>
      </div>

      <div class="d-flex justify-content-end mt-3">
        <%= form.submit 'Save Todo List', class: 'btn btn-success px-4' %>
      </div>
    <% end %>
  </div>
</div>

<% if @todo_list.errors.any? %> 
  <div class="alert alert-danger">
    <ul>
      <% @todo_list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<%= form_with(model: @todo_list, local: true) do |form| %>
  <div class="mb-3">
    <%= form.label :title, class: 'form-label fw-semibold' %>
    <%= form.text_field :title, class: 'form-control' %>
  </div>

  <div class="d-flex justify-content-end mt-4">
    <%= form.submit 'Save Todo List', class: 'btn btn-success' %>
  </div>
<% end %>

<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1 class="fw-bold"><%= @todo_list.title %></h1>
    <div>
      <%= link_to 'Edit', edit_todo_list_path(@todo_list), class: 'btn btn-warning me-2' %>
      <%= link_to 'Back', root_path, class: 'btn btn-secondary' %>
    </div>
  </div>

  <h2 class="mt-4">Tasks</h2>
  <%= link_to 'Add Task', new_todo_list_task_path(@todo_list), class: 'btn btn-primary mb-3' %>

  <% if @todo_list.tasks.any? %>
    <ul class="list-group">
      <% @todo_list.tasks.each do |task| %>
        <li class="list-group-item d-flex justify-content-between align-items-center">
          <div class="d-flex align-items-center">
            <%= form_with url: toggle_status_todo_list_task_path(@todo_list, task), method: :patch, remote: true do |f| %>
              <%= f.check_box :completed, checked: task.completed, class: "form-check-input me-2", onchange: "this.form.submit();" %>
            <% end %>
            <h5 class="mb-0">
              <%= link_to task.title, todo_list_task_path(@todo_list, task), class: "text-decoration-none text-dark" %>
            </h5>
          </div>
          <div>
            <span class="badge bg-<%= task.completed ? 'success' : 'warning' %>">
              <%= task.completed ? '✅ Completed' : '⏳ Pending' %>
            </span>
            <%= button_to 'Delete', todo_list_task_path(@todo_list, task), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="text-muted">No tasks added yet. Start by creating one!</p>
  <% end %>
</div>

<% if user_signed_in? %>
  <div class="container mt-5">
    <!-- Welcome Section -->
    <div class="card shadow-sm mb-4 border-success">
      <div class="card-body bg-light">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h2 class="h4 mb-1 text-success">
              <i class="bi bi-emoji-smile me-2"></i>
              Welcome back, <strong><%= current_user.username %></strong>!
            </h2>
            <p class="text-muted mb-0">
              <i class="bi bi-envelope me-1"></i> <%= current_user.email %>
            </p>
          </div>
          <%= button_to destroy_user_session_path, method: :delete, class: "btn btn-outline-danger" do %>
            <i class="bi bi-box-arrow-right me-1"></i> Sign out
          <% end %>
        </div>
      </div>
    </div>

    <!-- User List Section -->
    <div class="card shadow-sm">
      <div class="card-header bg-light">
        <h2 class="h5 mb-0">
          <i class="bi bi-people me-2"></i>All Users
        </h2>
      </div>
      <div class="card-body p-0">
        <div class="table-responsive">
          <table class="table table-hover mb-0">
            <thead class="table-light">
              <tr>
                <th>Username</th>
                <th>Email</th>
                <th>Status</th>
              </tr>
            </thead>
            <tbody>
              <% User.all.each do |user| %>
                <tr>
                  <td>
                    <strong><%= user.username %></strong>
                    <% if user == current_user %>
                      <span class="badge bg-info ms-2">You</span>
                    <% end %>
                  </td>
                  <td><%= user.email %></td>
                  <td>
                    <% if user == current_user %>
                      <span class="badge bg-success">Active</span>
                    <% else %>
                      <span class="badge bg-light text-dark">Member</span>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
<% else %>
  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="card shadow-sm border-0">
          <div class="card-body text-center py-5">
            <i class="bi bi-door-open text-primary" style="font-size: 3rem;"></i>
            <h2 class="h4 mt-3 mb-4">Welcome to Todo App</h2>
            <p class="text-muted mb-4">
              Please sign in to manage your tasks
            </p>
            <%= button_to new_user_session_path, class: "btn btn-primary btn-lg w-100" do %>
              <i class="bi bi-box-arrow-in-right me-2"></i> Sign In
            <% end %>
            <div class="mt-3">
              <%= link_to "Create an account", new_user_registration_path, class: "text-decoration-none" %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<!-- Bootstrap Icons CSS -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.0/font/bootstrap-icons.css">
<% if user_signed_in? %> 
  <div class="container-sm mt-4">
    <!-- Welcome Message -->
    <div class="alert alert-success d-inline-block w-auto p-3 mb-3">
      Welcome, <strong><%= current_user.username %></strong>!
    </div>

    <!-- Sign out Button -->
    <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "btn btn-danger mb-3" %> 

    <!-- Home Page Content -->
    <h1 class="display-5">Home Page</h1>
    <h2 class="my-3">All Users</h2>

    <!-- User List -->
    <div class="list-group w-25">
      <% User.all.each do |user| %>
        <div class="list-group-item d-flex justify-content-between align-items-center">
          <strong><%= user.username %></strong> 
          <span class="text-muted"><%= user.email %></span>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="container-sm mt-4">
    <%= button_to "Sign in", new_user_session_path, class: "btn btn-primary" %> 
  </div>
<% end %>
